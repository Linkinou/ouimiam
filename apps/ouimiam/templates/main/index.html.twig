            <!-- Main content -->
            <div class="rw-column rw-content">

                {% if recipeOfTheDay %}
                    <div class="rw-row subtle large home-recipe-of-the-day">
                        <div class="grid-container">
                            <div class="grid desk-6">
                                <div class="entry-photo">
                                    <div class="badge">Recette à découvrir</div>
                                    {% if recipeOfTheDay.image is not null %}
                                        <img src="{{ vich_uploader_asset(recipeOfTheDay, 'imageFile') }}" alt="{{ recipeOfTheDay.image }}" >
                                    {% else %}
                                        <img src="{{ asset('build/placeholder/food/560x380/21.jpg') }}" alt="" />
                                    {% endif %}
                                </div>
                            </div>
                            <div class="grid desk-6">
                                <h3><a href="{{ path('view_recipe', {'id': recipeOfTheDay.id}) }}">{{ recipeOfTheDay.name }}</a></h3>
                                <p>{{ recipeOfTheDay.description }}</p>

                                <div class="clear"></div>

                                <div class="entry-info-author">
                                    {% if recipeOfTheDay.user.avatar.image is not null %}
                                        <img width="80px" height="80px" src="{{ vich_uploader_asset(recipeOfTheDay.user, 'imageFile') }}" alt="{{ recipeOfTheDay.user.avatar.image }}" >
                                    {% else %}
                                        <img src="{{ asset('build/placeholder/people/80x80/21.jpg') }}" alt="" />
                                    {% endif %}
                                    <div class="submited-by">Auteur:</div>
                                    <div class="author-sname"><a href="#">{{ recipeOfTheDay.user.username }}</a> <!-- <span class="mark green" title="Pro member!">Pro</span> --></div>
                                    {#<div class="total-recipes">136 recipes</div>#}
                                </div>

                            </div>
                        </div>
                    </div>
                {% endif %}

