                                            <img src="{{ asset('build/placeholder/food/350x240/18.jpg') }}" alt="" />
                                        {% endif %}
                                    </div>
                                    <div class="entry-title">
                                        <a href="{{ path('view_recipe', {'id': latestRecipe.id}) }}">{{ latestRecipe.name }}</a>
                                    </div>
                                    <div class="entry-meta">
                                        <span class="date">{{ latestRecipe.createdAt|date }}</span>
                                    </div>
                                    <div class="entry-content">
                                        <p>{{ latestRecipe.description }}</p>
                                    </div>
